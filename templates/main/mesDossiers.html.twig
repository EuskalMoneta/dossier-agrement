{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block content %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container">
        <div class="row">
            <div class="col-10">
                <h1 class="H1-header-40"> Mes dossiers </h1>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                {% for dossier in dossiers %}

                    {% include 'main/miniDossier.html.twig' with {'dossier': dossier} %}

                {% endfor %}
                <div class="mt-5">
                    {{ knp_pagination_render(dossiers) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}
